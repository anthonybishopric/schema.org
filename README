class Bird < ActiveRecord::Base

  microdata_item :thing
  microdata_attributes :birth => :birthDate
  
  def birth
    DateTime.now
  end
  
end

# here's an instance of it

bird{
   name: 'Foo',
   birth: '2011-06-05'
}

---------------------


<!-- In an erb with access to the Bird -->

<%= micro @bird do |metabird|%>

  <b>Name:</b>
  <%= metabird.name %>

  <p>Born:</p>
  <%= metabird.birth.strftime("%B %d, %Y")%>

<%end%>

<!-- results in -->
 
<span class='meta' itemscope itemtype='http://schema.org/Thing'> 
 
  <b>Name:</b> 
  <span class='meta' itemprop='name'>Foo&lt;b&gt;foo&lt;/b&gt;</span> 
 
  <p>Born:</p> 
  <time itemprop='birthDate' datetime='2011-06-05'>June 05, 2011</time> 
 
</span>